{
    "manifest_version": 2,
    "name": "Your Extension Name",
    "version": "1.0",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "images/icon48.png"
      }
    },
    "icons": {
      "48": "images/icon48.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  